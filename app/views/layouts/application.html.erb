<!DOCTYPE html>
<html>
<head>
  <title>Trails</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <ul>
    <li><%= link_to t(:home), root_path %></li>
  <% if user_signed_in? %>
    <li><%= t(:signed_in_as) %> <strong><%= current_user.email %></strong>.</li>
    <li><%= link_to t(:edit_profile), edit_user_registration_path %></li>
    <li><%= link_to t(:sign_out), destroy_user_session_path,
                    method: :delete %></li>
  <% else %>
    <li><%= link_to t(:sign_up), new_user_registration_path %></li>
    <li><%= link_to t(:sign_in), new_user_session_path %></li>
  <% end %>
  </ul>
</nav>

<% if notice %>
<p class="notice"><%= notice %></p>
<% end %>
<% if alert %>
<p class="alert"><%= alert %></p>
<% end %>

<%= yield %>

<footer>
  <p>
    Â© <%= Time.now.year %> <%= t(:copyright) %> |
    Running in <%= Rails.env %> mode
    <% if Rails.env == 'production' or Rails.env == 'certification'%>
      Version 0.0.0
    <% end %>
  </p>
</footer>

